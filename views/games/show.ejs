<% if (!game) { %>
<div class="error-container">
  <div class="error-card">
    <h2>‚ùå Aucun jeu √† afficher</h2>
    <p>Le jeu demand√© n'a pas √©t√© trouv√©.</p>
    <a href="/info" class="btn-primary">Retour √† la liste</a>
  </div>
</div>
<% } else { %>

<!-- Header avec titre et navigation -->
<div class="game-header">
  <div class="breadcrumb">
    <a href="/info" class="breadcrumb-link">‚Üê Retour aux jeux</a>
  </div>
  <h1 class="game-title"><%= game.name %></h1>
</div>

<!-- Contenu principal -->
<div class="game-content">
  <!-- Colonne gauche : Image et infos de base -->
  <div class="game-sidebar">
    <div class="cover-container">
      <% if (game.cover) { %>
      <img src="<%= game.cover %>" alt="<%= game.name %>" class="game-cover" />
      <% } else { %>
      <div class="no-cover">
        <span class="icon">üéÆ</span>
        <p>Aucune image</p>
      </div>
      <% } %>
    </div>

    <!-- Genres -->
    <div class="genres-section">
      <h4>Genres</h4>
      <div class="genres-list">
        <% (game.genres || []).forEach(function(gn){ %>
        <span class="genre-tag"><%= gn %></span>
        <% }) %> <% if (!game.genres || game.genres.length === 0) { %>
        <span class="genre-tag no-genre">Aucun genre</span>
        <% } %>
      </div>
    </div>

    <!-- Bouton favori -->
    <div class="favorite-section">
      <% if (isAuthenticated) { %>
      <form
        method="post"
        action="/info/<%= game.slug %>/favorite"
        class="favorite-form"
      >
        <button
          type="submit"
          class="favorite-btn <%= isFavorite ? 'is-favorite' : '' %>"
          title="<%= isFavorite ? 'Retirer des favoris' : 'Ajouter aux favoris' %>"
        >
          <span class="star-icon <%= isFavorite ? 'filled' : '' %>">‚òÖ</span>
          <span class="favorite-text"
            ><%= isFavorite ? 'Favoris' : 'Ajouter aux favoris' %></span
          >
        </button>
      </form>
      <% } else { %>
      <a href="/auth/join" class="login-prompt">
        <span class="star-icon">‚òÜ</span>
        <span class="login-text">Se connecter pour ajouter aux favoris</span>
      </a>
      <% } %>
    </div>
  </div>

  <!-- Colonne droite : D√©tails RAWG -->
  <div class="game-details">
    <% if (rawg && rawg.details) { %>
    <!-- Informations principales -->
    <div class="details-card main-info">
      <h3 class="section-title">üìä Informations</h3>
      <div class="info-grid">
        <div class="info-item">
          <span class="info-label">üìÖ Date de sortie</span>
          <span class="info-value"
            ><%= rawg.details.released || 'Non sp√©cifi√©e' %></span
          >
        </div>
        <div class="info-item">
          <span class="info-label">‚≠ê Note Metacritic</span>
          <span
            class="info-value <%= rawg.details.metacritic ? 'score-' + Math.floor(rawg.details.metacritic / 20) : '' %>"
          >
            <%= rawg.details.metacritic || 'Non √©valu√©' %>
          </span>
        </div>
      </div>
    </div>

    <!-- D√©veloppeurs et √©diteurs -->
    <% if (rawg.details.developers && rawg.details.developers.length) { %>
    <div class="details-card">
      <h3 class="section-title">üë®‚Äçüíª D√©veloppeurs</h3>
      <div class="company-list">
        <% rawg.details.developers.forEach(function(d){ %>
        <span class="company-tag"><%= d.name %></span>
        <% }) %>
      </div>
    </div>
    <% } %> <% if (rawg.details.publishers && rawg.details.publishers.length) {
    %>
    <div class="details-card">
      <h3 class="section-title">üè¢ √âditeurs</h3>
      <div class="company-list">
        <% rawg.details.publishers.forEach(function(p){ %>
        <span class="company-tag"><%= p.name %></span>
        <% }) %>
      </div>
    </div>
    <% } %>

    <!-- Plateformes -->
    <% if (rawg.details.platforms && rawg.details.platforms.length) { %>
    <div class="details-card">
      <h3 class="section-title">üéÆ Plateformes</h3>
      <div class="platforms-grid">
        <% (rawg.details.platforms || []).forEach(function(p){ %>
        <span class="platform-badge"><%= p.platform?.name || p.name %></span>
        <% }) %>
      </div>
    </div>
    <% } %>

    <!-- Description -->
    <% if (rawg.details.description_raw) { %>
    <div class="details-card">
      <h3 class="section-title">üìñ Description</h3>
      <div class="description-content">
        <p>
          <%= rawg.details.description_raw.slice(0, 1500) %><% if
          (rawg.details.description_raw.length > 1500) { %>...<% } %>
        </p>
      </div>
    </div>
    <% } %>

    <!-- Screenshots -->
    <% if (rawg.screenshots && rawg.screenshots.length) { %>
    <div class="details-card">
      <h3 class="section-title">üñºÔ∏è Screenshots</h3>
      <p class="screenshots-hint">Cliquez sur une image pour l'agrandir</p>
      <div class="screenshots-grid">
        <% rawg.screenshots.forEach(function(s){ %>
        <div class="screenshot-item">
          <img src="<%= s.image %>" alt="Screenshot" class="screenshot-img" />
        </div>
        <% }) %>
      </div>
    </div>
    <% } %> <% } else { %>
    <!-- Aucun d√©tail RAWG -->
    <div class="details-card no-rawg">
      <div class="no-rawg-content">
        <span class="no-rawg-icon">üîç</span>
        <h3>Aucun d√©tail RAWG disponible</h3>
        <p>
          Les informations d√©taill√©es pour ce jeu ne sont pas encore disponibles
          dans notre base de donn√©es.
        </p>
      </div>
    </div>
    <% } %>
  </div>
</div>

<!-- Lightbox pour les screenshots -->
<div class="lightbox" id="lightbox">
  <div class="lightbox-content">
