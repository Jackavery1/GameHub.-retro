<h1 class="hero-title">Info</h1>

<form class="mt-3 flex gap-2" method="get" action="/info/search">
  <input name="q" value="<%= q %>" placeholder="Rechercher un jeu…" />
  <button class="btn-8" type="submit">RAWG</button>
  <a class="btn-8" href="/info">DB locale</a>
</form>

<div class="grid grid-3 mt-4">
  <% games.forEach(g => { %>
  <div class="cartridge">
    <div class="label"><%= g.name %></div>
    <% if (g.cover) { %>
    <a href="/info/<%= g.slug %>">
      <img
        src="<%= g.cover %>"
        alt="<%= g.name %> cover"
        style="width: 100%; border: 2px solid #000"
      />
    </a>
    <% } %>
    <div class="mt-2 flex gap-2" style="flex-wrap: wrap">
      <button class="btn-icon" data-fav="<%= g._id %>" title="Favori">
        <span class="icon icon-star"></span>
      </button>
      <% (g.genres||[]).slice(0,3).forEach(gn => { %>
      <span class="badge"><%= gn %></span>
      <% }) %>
      <a class="badge a-arcade" href="/info/<%= g.slug %>">Infos</a>
    </div>
  </div>
  <% }) %> <% if (!games.length) { %>
  <p>Aucun jeu trouvé.</p>
  <% } %>
</div>
