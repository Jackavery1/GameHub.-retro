<script>
  // Filtrage des cartes
  document
    .querySelectorAll("[data-arcade-filters] select")
    .forEach((select) => {
      select.addEventListener("change", filterCards);
    });

  function filterCards() {
    const brand = document.querySelector('select[name="brand"]').value;
    const year = document.querySelector('select[name="year"]').value;
    const fav = document.querySelector('select[name="fav"]').value;

    document.querySelectorAll(".console-card").forEach((card) => {
      let show = true;

      if (brand && card.dataset.brand !== brand) show = false;
      if (year && card.dataset.era !== year) show = false;
      if (fav && card.dataset.fav !== fav) show = false;

      card.style.display = show ? "block" : "none";
    });
  }

  // Emp√™cher la propagation des clics sur les liens pour √©viter les conflits
  document.querySelectorAll(".console-card .btn-8").forEach((link) => {
    link.addEventListener("click", (e) => {
      e.stopPropagation();
    });
  });
</script>
