<script>
  // Variables globales
  let currentGame = null;
  let gameFrame = null;

  // Initialisation
  document.addEventListener("DOMContentLoaded", () => {
    setupDOSEmulator();
    setupControls();
    setupGameLibrary();
  });

  function setupDOSEmulator() {
    console.log("üíª Initialisation √©mulateur MS-DOS...");

    // Pr√©parer l'affichage
    const display = document.getElementById("dosEmulator");
    const iframe = document.getElementById("iaFrame");

    console.log("‚úÖ √âmulateur MS-DOS pr√™t");
  }

  function setupControls() {
    const controls = document.querySelectorAll(".control-knob");

    controls.forEach((control) => {
      control.addEventListener("click", () => {
        const action = control.dataset.action;

        switch (action) {
          case "power":
            togglePower();
            break;
          case "volume":
            toggleVolume();
            break;
          case "reset":
            resetEmulator();
            break;
        }
      });
    });
  }

  function setupGameLibrary() {
    const cartridges = document.querySelectorAll(".game-cartridge");

    cartridges.forEach((cartridge) => {
      cartridge.addEventListener("click", () => {
        const gameId = cartridge.dataset.ia;
        const gameName = cartridge.dataset.name;

        loadDOSGame(gameId, gameName);

        // Mise √† jour visuelle
        cartridges.forEach((c) => c.classList.remove("active"));
        cartridge.classList.add("active");
      });
    });
  }

  function loadDOSGame(gameId, gameName) {
    console.log("üíª Chargement jeu DOS:", gameName);

    const display = document.getElementById("dosEmulator");
    const iframe = document.getElementById("iaFrame");

    // Construire l'URL Internet Archive
    const gameUrl = `https://archive.org/embed/${gameId}`;

    // Configurer et charger le jeu
    iframe.src = gameUrl;
    display.classList.add("loaded");

    currentGame = gameName;

    // Effet de chargement
    showLoadingEffect();

    console.log("üöÄ Jeu charg√©:", gameName);
  }

  function showLoadingEffect() {
    const scanlines = document.querySelector(".dos-scanlines");
    scanlines.style.animation = "loading-flicker 0.5s ease-in-out 3";
  }

  function togglePower() {
    const display = document.getElementById("dosEmulator");
    const iframe = document.getElementById("iaFrame");

    if (currentGame) {
      // Arr√™ter le jeu
      iframe.src = "";
      display.classList.remove("loaded");

      // Retirer la s√©lection active
      document.querySelectorAll(".game-cartridge").forEach((c) => {
        c.classList.remove("active");
      });

      currentGame = null;
      console.log("‚èª √âmulateur √©teint");
    }
  }

  function toggleVolume() {
    const volumeKnob = document.querySelector('[data-action="volume"]');
    volumeKnob.style.transform = "rotate(45deg)";

    setTimeout(() => {
      volumeKnob.style.transform = "";
    }, 200);

    console.log("üîä Volume ajust√©");
  }

  function resetEmulator() {
    if (currentGame) {
      const iframe = document.getElementById("iaFrame");
      iframe.src = iframe.src; // Recharger l'iframe
      showLoadingEffect();
      console.log("‚Ü∫ Jeu red√©marr√©");
    }
  }

  // Animation de chargement
  const style = document.createElement("style");
  style.textContent = `
    @keyframes loading-flicker {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
  `;
  document.head.appendChild(style);

  console.log("üíª Page √©mulateur MS-DOS CRT charg√©e");
</script>
