<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Multi-√âmulateur - GameHub Retro</title>
    <link rel="stylesheet" href="/public/styles.css" />
    <style>
      .system-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
      }
      .system-card {
        background: linear-gradient(135deg, #9b59b6, #8e44ad);
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        cursor: pointer;
        transition: transform 0.3s ease;
        border: 2px solid #9b59b6;
      }
      .system-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(155, 89, 182, 0.3);
      }
      .system-card h3 {
        color: #ecf0f1;
        margin: 0 0 10px 0;
        font-size: 18px;
      }
      .system-card p {
        color: #bdc3c7;
        font-size: 14px;
        margin: 0 0 15px 0;
      }
      .system-card .icon {
        font-size: 48px;
        margin-bottom: 15px;
      }
      .emulator-container {
        background: #1a1a1a;
        border-radius: 15px;
        padding: 20px;
        margin-top: 20px;
        border: 3px solid #9b59b6;
      }
      .emulator-frame {
        width: 100%;
        height: 600px;
        border: 2px solid #9b59b6;
        border-radius: 10px;
        background: #000;
      }
      .controls {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin: 20px 0;
        flex-wrap: wrap;
      }
      .control-btn {
        background: linear-gradient(135deg, #9b59b6, #8e44ad);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: all 0.3s ease;
      }
      .control-btn:hover {
        background: linear-gradient(135deg, #8e44ad, #7d3c98);
        transform: translateY(-2px);
      }
      .file-upload {
        background: rgba(155, 89, 182, 0.1);
        border: 2px dashed #9b59b6;
        border-radius: 10px;
        padding: 30px;
        text-align: center;
        margin: 20px 0;
      }
      .file-upload input[type="file"] {
        display: none;
      }
      .file-upload label {
        color: #9b59b6;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
      }
      .instructions {
        background: rgba(155, 89, 182, 0.1);
        border: 1px solid #9b59b6;
        border-radius: 10px;
        padding: 15px;
        margin-top: 20px;
      }
      .instructions h3 {
        color: #9b59b6;
        margin-top: 0;
      }
      .instructions ul {
        color: #ecf0f1;
        margin: 10px 0;
        padding-left: 20px;
      }
      .instructions li {
        margin: 5px 0;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="hero-title">Multi-√âmulateur</h1>
      <p class="sub">
        Jouez √† vos ROMs pr√©f√©r√©es sur tous les syst√®mes r√©tro avec EmulatorJS.
      </p>

      <div class="system-grid">
        <div class="system-card" onclick="selectSystem('nes')">
          <div class="icon">üéÆ</div>
          <h3>Nintendo NES</h3>
          <p>Jeux .nes</p>
        </div>
        <div class="system-card" onclick="selectSystem('snes')">
          <div class="icon">üéÆ</div>
          <h3>Super Nintendo</h3>
          <p>Jeux .smc, .sfc</p>
        </div>
        <div class="system-card" onclick="selectSystem('gb')">
          <div class="icon">üì±</div>
          <h3>Game Boy</h3>
          <p>Jeux .gb, .gbc</p>
        </div>
        <div class="system-card" onclick="selectSystem('gba')">
          <div class="icon">üì±</div>
          <h3>Game Boy Advance</h3>
          <p>Jeux .gba</p>
        </div>
        <div class="system-card" onclick="selectSystem('genesis')">
          <div class="icon">üéÆ</div>
          <h3>Sega Genesis</h3>
          <p>Jeux .md, .bin</p>
        </div>
        <div class="system-card" onclick="selectSystem('psx')">
          <div class="icon">üéÆ</div>
          <h3>PlayStation</h3>
          <p>Jeux .bin, .iso</p>
        </div>
      </div>

      <div
        class="emulator-container"
        id="emulatorContainer"
        style="display: none"
      >
        <div class="file-upload">
          <input
            type="file"
            id="romFile"
            accept=".nes,.smc,.sfc,.gb,.gbc,.gba,.md,.bin,.iso"
            onchange="loadROM(event)"
          />
          <label for="romFile">
            üìÅ Cliquez ici pour s√©lectionner votre ROM
            <br />
            <small
              >Formats support√©s: .nes, .smc, .sfc, .gb, .gbc, .gba, .md, .bin,
              .iso</small
            >
          </label>
        </div>

        <div id="emulatorFrame" class="emulator-frame" style="display: none">
          <!-- EmulatorJS sera charg√© ici -->
        </div>

        <div class="controls" id="gameControls" style="display: none">
          <button class="control-btn" onclick="startEmulator()">
            ‚ñ∂ D√©marrer
          </button>
          <button class="control-btn" onclick="pauseEmulator()">‚è∏ Pause</button>
          <button class="control-btn" onclick="resetEmulator()">
            üîÑ Reset
          </button>
          <button class="control-btn" onclick="fullscreenEmulator()">
            ‚õ∂ Plein √©cran
          </button>
          <button class="control-btn" onclick="saveState()">
            üíæ Sauvegarder
          </button>
          <button class="control-btn" onclick="loadState()">üìÇ Charger</button>
          <button class="control-btn" onclick="closeEmulator()">
            ‚úï Fermer
          </button>
        </div>

        <div class="instructions">
          <h3>üéÆ Contr√¥les Multi-Syst√®me</h3>
          <ul>
            <li><strong>Fl√®ches</strong> : D-pad</li>
            <li><strong>Z/X</strong> : Boutons A/B</li>
            <li><strong>A/S</strong> : Boutons X/Y (SNES)</li>
            <li><strong>Entr√©e</strong> : Start</li>
            <li><strong>Shift</strong> : Select</li>
            <li><strong>√âchap</strong> : Menu/Quitter</li>
            <li><strong>F</strong> : Plein √©cran</li>
          </ul>
        </div>
      </div>

      <div class="back-link">
        <a href="/arcade" class="btn-8">‚Üê Retour √† l'Arcade</a>
      </div>
    </div>

    <script>
      let currentSystem = null;
      let currentROM = null;
      let emulator = null;

      function selectSystem(system) {
        currentSystem = system;
        document.getElementById("emulatorContainer").style.display = "block";
        document.getElementById("emulatorFrame").style.display = "none";
        document.getElementById("gameControls").style.display = "none";

        console.log(`üéÆ Syst√®me s√©lectionn√©: ${system}`);
      }

      function loadROM(event) {
        const file = event.target.files[0];
        if (!file || !currentSystem) return;

        currentROM = file;
        console.log(`üìÅ ROM charg√©e: ${file.name} pour ${currentSystem}`);

        // Ici, vous int√©greriez EmulatorJS
        // Pour l'instant, on simule le chargement
        setTimeout(() => {
          document.getElementById("emulatorFrame").style.display = "block";
          document.getElementById("gameControls").style.display = "flex";

          // Simuler l'√©mulateur
          const frame = document.getElementById("emulatorFrame");
          frame.innerHTML = `
            <div style="display: flex; align-items: center; justify-content: center; height: 100%; color: #9b59b6; font-size: 18px;">
              <div style="text-align: center;">
                <div style="font-size: 48px; margin-bottom: 20px;">üéÆ</div>
                <div>√âmulateur ${currentSystem.toUpperCase()}</div>
                <div style="font-size: 14px; margin-top: 10px;">ROM: ${
                  file.name
                }</div>
                <div style="font-size: 12px; margin-top: 5px; color: #bdc3c7;">Cliquez "D√©marrer" pour jouer</div>
              </div>
            </div>
          `;
        }, 1000);
      }

      function startEmulator() {
        if (!currentROM) return;
        console.log(`‚ñ∂ D√©marrage de l'√©mulateur ${currentSystem}`);
        // Ici, vous d√©marreriez EmulatorJS
      }

      function pauseEmulator() {
        console.log("‚è∏ Pause/Reprise");
        // Ici, vous mettriez en pause EmulatorJS
      }

      function resetEmulator() {
        if (!currentROM) return;
        console.log(`üîÑ Reset de l'√©mulateur ${currentSystem}`);
        loadROM({ target: { files: [currentROM] } });
      }

      function fullscreenEmulator() {
        const frame = document.getElementById("emulatorFrame");
        if (frame.requestFullscreen) {
          frame.requestFullscreen();
        }
      }

      function saveState() {
        console.log("üíæ Sauvegarde d'√©tat");
        // Ici, vous sauvegarderiez l'√©tat d'EmulatorJS
      }

      function loadState() {
        console.log("üìÇ Chargement d'√©tat");
        // Ici, vous chargeriez l'√©tat d'EmulatorJS
      }

      function closeEmulator() {
        document.getElementById("emulatorContainer").style.display = "none";
        document.getElementById("emulatorFrame").style.display = "none";
        document.getElementById("gameControls").style.display = "none";
        currentSystem = null;
        currentROM = null;
        emulator = null;

        // R√©initialiser le champ file
        document.getElementById("romFile").value = "";
      }

      // Gestion des touches clavier
      document.addEventListener("keydown", function (e) {
        if (!currentROM) return;

        switch (e.key) {
          case "ArrowUp":
          case "ArrowDown":
          case "ArrowLeft":
          case "ArrowRight":
          case "z":
          case "x":
          case "a":
          case "s":
          case "Enter":
          case "Shift":
          case " ":
            e.preventDefault();
            console.log(`Touche press√©e: ${e.key}`);
            break;
        }
      });
    </script>
  </body>
</html>

