<script>
  // Configuration EmulatorJS
  window.EJS_player = "#gbEmulator";
  window.EJS_pathtodata = "/emulatorjs/data/";
  window.EJS_startOnLoaded = true;
  window.EJS_gameID = 3;

  // Variables globales
  let currentEmulator = null;
  let isEmulatorLoaded = false;

  // Initialisation
  document.addEventListener("DOMContentLoaded", () => {
    setupEmulator();
    setupControls();
    setupROMLoader();
  });

  function setupEmulator() {
    console.log("üéÆ Initialisation √©mulateur Game Boy...");

    // Pr√©parer l'affichage
    const display = document.getElementById("gbEmulator");
    display.innerHTML = "";

    console.log("‚úÖ √âmulateur Game Boy pr√™t");
  }

  function setupControls() {
    const controls = document.querySelectorAll(".control-knob");

    controls.forEach((control) => {
      control.addEventListener("click", () => {
        const action = control.dataset.action;

        switch (action) {
          case "power":
            togglePower();
            break;
          case "volume":
            toggleVolume();
            break;
          case "reset":
            resetEmulator();
            break;
        }
      });
    });
  }

  function setupROMLoader() {
    const romFile = document.getElementById("romFile");
    const cartridges = document.querySelectorAll(
      ".game-cartridge:not(.info-cart)"
    );

    // Gestionnaire de fichier ROM
    romFile.addEventListener("change", (event) => {
      const file = event.target.files[0];
      if (file) {
        loadROMFile(file);
      }
    });

    // Gestionnaire des cartouches de d√©monstration
    cartridges.forEach((cartridge) => {
      cartridge.addEventListener("click", () => {
        const romType = cartridge.dataset.rom;
        const core = cartridge.dataset.core;
        const name = cartridge.dataset.name;

        loadDemoROM(romType, core, name);

        // Mise √† jour visuelle
        cartridges.forEach((c) => c.classList.remove("active"));
        cartridge.classList.add("active");
      });
    });
  }

  function loadROMFile(file) {
    console.log("üìÅ Chargement ROM:", file.name);

    // V√©rifier l'extension
    const extension = file.name.split(".").pop().toLowerCase();
    if (!["gb", "gbc"].includes(extension)) {
      alert("Format non support√©. Utilisez des fichiers .gb ou .gbc");
      return;
    }

    // Cr√©er une URL pour le fichier
    const romUrl = URL.createObjectURL(file);

    // Configurer et lancer l'√©mulateur
    window.EJS_gameUrl = romUrl;
    window.EJS_core = "gambatte";

    startEmulator(file.name);
  }

  function loadDemoROM(romType, core, name) {
    console.log("üéÆ Chargement ROM de d√©monstration:", name);

    // URLs de d√©monstration (ROMs homebrew libres)
    const demoROMs = {
      demo: "https://github.com/AntonioND/ucity/releases/download/v1.2/ucity.gb",
      homebrew1:
        "https://github.com/pinobatch/libbet/releases/download/0.05/libbet.gb",
      test: "https://github.com/c-sp/gameboy-test-roms/raw/master/cpu/01-special.gb",
    };

    const romUrl = demoROMs[romType];
    if (!romUrl) {
      console.error("ROM de d√©monstration non trouv√©e:", romType);
      return;
    }

    // Configurer et lancer l'√©mulateur
    window.EJS_gameUrl = romUrl;
    window.EJS_core = core || "gambatte";

    startEmulator(name);
  }

  function startEmulator(gameName) {
    console.log("üöÄ D√©marrage √©mulateur pour:", gameName);

    // Nettoyer l'affichage pr√©c√©dent
    const display = document.getElementById("gbEmulator");
    display.innerHTML = "";
    display.classList.add("loaded");

    // Charger EmulatorJS
    if (!document.querySelector('script[src="/emulatorjs/data/loader.js"]')) {
      const script = document.createElement("script");
      script.src = "/emulatorjs/data/loader.js";
      script.onload = () => {
        console.log("‚úÖ EmulatorJS charg√©");
        isEmulatorLoaded = true;
      };
      script.onerror = () => {
        console.error("‚ùå Erreur lors du chargement d'EmulatorJS");
        display.innerHTML =
          '<div style="color: #e74c3c; text-align: center; padding: 50px;">‚ùå Erreur de chargement</div>';
      };
      document.head.appendChild(script);
    } else {
      // EmulatorJS d√©j√† charg√©, relancer avec la nouvelle ROM
      console.log("üîÑ Relancement avec nouvelle ROM");
      isEmulatorLoaded = true;
    }

    // Effet de chargement
    showLoadingEffect();
  }

  function showLoadingEffect() {
    const scanlines = document.querySelector(".gb-scanlines");
    scanlines.style.animation = "loading-flicker 0.5s ease-in-out 3";
  }

  function togglePower() {
    if (isEmulatorLoaded && window.EJS_emulator) {
      // Arr√™ter l'√©mulateur
      const display = document.getElementById("gbEmulator");
      display.innerHTML = "";
      display.classList.remove("loaded");

      // Retirer la s√©lection active
      document.querySelectorAll(".game-cartridge").forEach((c) => {
        c.classList.remove("active");
      });

      isEmulatorLoaded = false;
      console.log("‚èª √âmulateur √©teint");
    }
  }

  function toggleVolume() {
    const volumeKnob = document.querySelector('[data-action="volume"]');
    volumeKnob.style.transform = "rotate(45deg)";

    setTimeout(() => {
      volumeKnob.style.transform = "";
    }, 200);

    if (window.EJS_emulator) {
      // Toggle volume si l'√©mulateur est charg√©
      console.log("üîä Volume ajust√©");
    }
  }

  function resetEmulator() {
    if (window.EJS_emulator) {
      window.EJS_emulator.restart();
      showLoadingEffect();
      console.log("‚Ü∫ √âmulateur red√©marr√©");
    }
  }

  // Animation de chargement
  const style = document.createElement("style");
  style.textContent = `
    @keyframes loading-flicker {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
  `;
  document.head.appendChild(style);

  console.log("üéÆ Page √©mulateur Game Boy fonctionnel charg√©e");
</script>
